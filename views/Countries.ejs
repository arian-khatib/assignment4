<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Countries</title>
    <link href="/css/main.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar', {page: '/un/countries'}) %>
    <div class="container mx-auto p-4">
        <div class="hero bg-base-200 rounded-lg p-4">
            <h1 class="text-5xl font-bold text-center">Countries</h1>
        </div>
        <table class="table-auto w-full mt-4">
            <thead>
                <tr>
                    <th>Flag</th>
                    <th>Name</th>
                    <th>Region</th>
                    <th>Population</th>
                    <th>Capital</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                <% countries.forEach(country => { %>
                    <tr>
                        <td><img src="<%= country.flag %>" alt="Flag" class="w-20 h-auto"></td>
                        <td><%= country.name %></td>
                        <td><a href="/un/countries?region=<%= country.region %>" class="btn"><%= country.region %></a></td>
                        <td><%= country.population.toLocaleString() %></td>
                        <td><%= country.capital %></td>
                        <td><a href="/un/countries/<%= country.a2code %>" class="btn">Details</a></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
